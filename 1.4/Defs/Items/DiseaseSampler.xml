<?xml version="1.0" encoding="utf-8"?>
<Defs>

  <ThingDef ParentName="ResourceBase">
    <defName>USH_DiseaseSampler</defName>
    <label>disease sampler</label>
    <description>A medical tool intended for use on sick patients, it creates a sample of the disease that can later be utilized in the production of a deadly biological arsenal.</description>
    <thingClass>ThingWithComps</thingClass>
    <graphicData>
      <texPath>Things/Item/DiseaseSampler</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <resourceReadoutPriority>Middle</resourceReadoutPriority>
    <useHitPoints>true</useHitPoints>
    <statBases>
      <MaxHitPoints>80</MaxHitPoints>
      <Mass>0.2</Mass>
      <DeteriorationRate>2.0</DeteriorationRate>
      <Flammability>0.2</Flammability>
    </statBases>
    <techLevel>Industrial</techLevel>
    <tradeTags>
      <li>ExoticMisc</li>
    </tradeTags>
    <stackLimit>10</stackLimit>
    <thingCategories>
      <li>ItemsMisc</li>
    </thingCategories>
    <tradeability>Sellable</tradeability>
    <comps>
      <li Class="CompProperties_Usable">
        <useJob>UseItem</useJob>
        <useLabel>Use {0_label}</useLabel>
        <useDuration>0</useDuration>
        <warmupMote>Mote_ResurrectAbility</warmupMote>
      </li>
      <li Class="CompProperties_Targetable">
        <compClass>CompTargetable_SinglePawn</compClass>
      </li>
      <li Class="BiologicalWarfare.CompProperties_TargetEffectSampleDisease">
        <jobDef>USH_SampleDisease</jobDef>
      </li>
    </comps>
  </ThingDef>

  <JobDef>
    <defName>USH_SampleDisease</defName>
    <driverClass>BiologicalWarfare.JobDriver_SampleDisease</driverClass>
    <reportString>sampling disease from TargetA.</reportString>
    <allowOpportunisticPrefix>true</allowOpportunisticPrefix>
  </JobDef>

  <RecipeDef>
    <defName>USH_SampleDisease</defName>
    <label>sample disease</label>
    <description>Sample a disease.</description>
    <workerClass>Recipe_AdministerUsableItem</workerClass>
    <jobString>Taking a sample of a disease.</jobString>
    <targetsBodyPart>false</targetsBodyPart>
    <anesthetize>false</anesthetize>
    <workAmount>120</workAmount>
    <dontShowIfAnyIngredientMissing>true</dontShowIfAnyIngredientMissing>
    <surgeryOutcomeEffect IsNull="True" />
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>USH_DiseaseSampler</li>
          </thingDefs>
        </filter>
        <count>1</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>USH_DiseaseSampler</li>
      </thingDefs>
    </fixedIngredientFilter>
  </RecipeDef>

</Defs>