<?xml version="1.0" encoding="utf-8"?>
<Defs>

  <ThingDef ParentName="MakeableDrugPillBase">
    <defName>USH_FleshBreaker</defName>
    <label>flesh-breaker</label>
    <description>A drug that exhausts the body, attacking the brain, lungs, stomach, and eyes. It induces unbearable hallucinations and general weakness in the organism. It is utilized in urbworlds as an illegal interrogation technique. Its properties make it a perfect candidate for a non-lethal chemical weapon.</description>
    <techLevel>Industrial</techLevel>
    <graphicData>
      <texPath>Things/Item/Drugs/Socializer</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
      <drawSize>0.85</drawSize>
    </graphicData>
    <rotatable>false</rotatable>
    <statBases>
      <WorkToMake>1000</WorkToMake>
      <MarketValue>4</MarketValue>
      <Mass>0.05</Mass>
      <DeteriorationRate>6</DeteriorationRate>
      <Flammability>0.6</Flammability>
    </statBases>
    <ingestible>
      <drugCategory>Medical</drugCategory>
      <outcomeDoers>
        <li Class="IngestionOutcomeDoer_GiveHediff">
          <hediffDef>USH_FleshBreakerHigh</hediffDef>
          <severity>1</severity>
        </li>
      </outcomeDoers>
    </ingestible>
    <recipeMaker>
      <researchPrerequisite>DrugProduction</researchPrerequisite>
      <bulkRecipeCount>4</bulkRecipeCount>
      <recipeUsers>
        <li>DrugLab</li>
      </recipeUsers>
      <skillRequirements>
        <Crafting>4</Crafting>
        <Intellectual>6</Intellectual>
      </skillRequirements>
    </recipeMaker>
    <costList>
      <Neutroamine>4</Neutroamine>
    </costList>
    <comps>
      <li Class="CompProperties_Drug">
        <listOrder>105</listOrder>
      </li>
    </comps>
  </ThingDef>

  <HediffDef>
    <defName>USH_FleshBreakerHigh</defName>
    <label>flesh-breaker</label>
    <description>Flesh-breaker chemicals in the bloodstream. Casues general weekness, vomiting and severe hallucinations.</description>
    <hediffClass>Hediff_High</hediffClass>
    <defaultLabelColor>(1,0,0.5)</defaultLabelColor>
    <scenarioCanAdd>false</scenarioCanAdd>
    <maxSeverity>1.0</maxSeverity>
    <isBad>false</isBad>
    <comps>
      <li Class="HediffCompProperties_SeverityPerDay">
        <severityPerDay>-0.5</severityPerDay>
        <showHoursToRecover>true</showHoursToRecover>
      </li>
      <li Class="HediffCompProperties_CauseMentalState">
        <animalMentalState>Wander_Psychotic_Short</animalMentalState>
        <animalMentalStateAlias>Wander_Psychotic_Short</animalMentalStateAlias>
        <humanMentalState>Wander_Psychotic_Short</humanMentalState>
        <letterDef>ThreatSmall</letterDef>
        <mtbDaysToCauseMentalState>0.05</mtbDaysToCauseMentalState>
      </li>
    </comps>
    <stages>
      <li>
        <label>initial</label>
        <vomitMtbDays>0.125</vomitMtbDays>
        <painFactor>1.1</painFactor>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <offset>-0.1</offset>
          </li>
          <li>
            <capacity>Moving</capacity>
            <offset>-0.2</offset>
          </li>
        </capMods>
      </li>
      <li>
        <label>pounding</label>
        <minSeverity>0.6</minSeverity>
        <hungerRateFactor>1.8</hungerRateFactor>
        <restFallFactor>1.8</restFallFactor>
        <vomitMtbDays>4</vomitMtbDays>
        <painFactor>1.25</painFactor>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <offset>-0.35</offset>
          </li>
          <li>
            <capacity>Moving</capacity>
            <offset>-0.6</offset>
          </li>
          <li>
            <capacity>Sight</capacity>
            <offset>-0.40</offset>
          </li>
          <li>
            <capacity>BloodFiltration</capacity>
            <offset>-0.40</offset>
          </li>
          <li>
            <capacity>BloodPumping</capacity>
            <offset>-0.20</offset>
          </li>
          <li>
            <capacity>Metabolism</capacity>
            <offset>-1.00</offset>
          </li>
          <li>
            <capacity>Breathing</capacity>
            <offset>-0.50</offset>
          </li>
        </capMods>
      </li>
    </stages>
  </HediffDef>

  <ThoughtDef>
    <defName>USH_USH_FleshBreakerThought</defName>
    <workerClass>ThoughtWorker_Hediff</workerClass>
    <hediff>USH_FleshBreakerHigh</hediff>
    <validWhileDespawned>true</validWhileDespawned>
    <stages>
      <li>
        <label>flesh-breaker agony</label>
        <description>I feel weak, hungry and powerless... I'm seeing things too</description>
        <baseMoodEffect>-12</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>

</Defs>