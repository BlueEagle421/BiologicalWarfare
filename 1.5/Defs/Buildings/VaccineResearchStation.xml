<?xml version="1.0" encoding="utf-8"?>
<Defs>

  <ThingDef ParentName="BuildingBase">
    <thingClass>BiologicalWarfare.BuildingVaccineResearchStation</thingClass>
    <defName>USH_VaccineResearchStation</defName>
    <label>antigens analyzer</label>
    <description>A lab-grade machine designed to analyze disease samples and develop antigens. It requires an inserted sample and a researcher to operate it. All previous antigens research requirements must be met for it to function properly.\n\nIt can contaminate the surrounding area during reasearch.</description>
    <graphicData>
      <texPath>Things/Building/BacteriaIncubator/BacteriaIncubator</texPath>
      <graphicClass>Graphic_Multi</graphicClass>
      <damageData>
        <cornerTL>Damage/Corner</cornerTL>
        <cornerTR>Damage/Corner</cornerTR>
        <cornerBL>Damage/Corner</cornerBL>
        <cornerBR>Damage/Corner</cornerBR>
      </damageData>
      <drawSize>(2,2)</drawSize>
      <drawRotated>true</drawRotated>
      <allowFlip>true</allowFlip>
    </graphicData>
    <size>(1, 1)</size>
    <altitudeLayer>Building</altitudeLayer>
    <passability>PassThroughOnly</passability>
    <defaultPlacingRot>South</defaultPlacingRot>
    <rotatable>true</rotatable>
    <hasInteractionCell>true</hasInteractionCell>
    <interactionCellOffset>(0,0,1)</interactionCellOffset>
    <interactionCellIcon>DiningChair</interactionCellIcon>
    <interactionCellIconReverse>true</interactionCellIconReverse>
    <fillPercent>0.35</fillPercent>
    <techLevel>Industrial</techLevel>
    <statBases>
      <WorkToBuild>1500</WorkToBuild>
      <MaxHitPoints>120</MaxHitPoints>
      <Mass>45</Mass>
      <Flammability>0.7</Flammability>
      <USH_ContaminationChanceFactor>0.8</USH_ContaminationChanceFactor>
    </statBases>
    <minifiedDef>MinifiedThing</minifiedDef>
    <tickerType>Normal</tickerType>
    <costList>
      <Steel>80</Steel>
      <Silver>30</Silver>
      <ComponentIndustrial>5</ComponentIndustrial>
    </costList>
    <thingCategories>
      <li>BuildingsProduction</li>
    </thingCategories>
    <designationCategory>Production</designationCategory>
    <comps>
      <li Class="CompProperties_Power">
        <compClass>CompPowerTrader</compClass>
        <basePowerConsumption>100</basePowerConsumption>
        <shortCircuitInRain>false</shortCircuitInRain>
      </li>
      <li Class="CompProperties_Flickable" />
      <li Class="CompProperties_AffectedByFacilities">
        <linkableFacilities>
          <li>USH_PathogenStabilizer</li>
        </linkableFacilities>
      </li>
      <li Class="BiologicalWarfare.CompProperties_DiseaseSampleContainer">
        <acceptAllDiseaseTypes>true</acceptAllDiseaseTypes>
        <stackLimit>1</stackLimit>
        <insertedSoundDef>USH_SampleInserted</insertedSoundDef>
        <extractedSoundDef>USH_SampleExtracted</extractedSoundDef>
        <drawStackLabel>true</drawStackLabel>
        <drawContainedThing>false</drawContainedThing>
      </li>
    </comps>
    <placeWorkers>
      <li>PlaceWorker_ShowFacilitiesConnections</li>
      <li>PlaceWorker_PreventInteractionSpotOverlap</li>
    </placeWorkers>
    <researchPrerequisites>
      <li>USH_PathogenProductionRes</li>
    </researchPrerequisites>
  </ThingDef>

</Defs>