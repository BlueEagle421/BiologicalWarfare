<?xml version="1.0" encoding="utf-8"?>
<Defs>

  <ThingDef ParentName="DoorBase">
    <thingClass>BiologicalWarfare.Building_ContaminationDoor</thingClass>
    <defName>USH_ContaminationDoor</defName>
    <label>contamination door</label>
    <description>An auto door with extended features. It only lets through pawns that are fully immune to disease pathogens. It's perfect for laboratories with contamination hazards. Any pawn that can breathe and has toxic environmental resistance below 80% will be blocked unless the door is set to be always held open.\n\nIt needs power to oparate properly.</description>
    <statBases>
      <WorkToBuild>1100</WorkToBuild>
    </statBases>
    <graphicData>
      <texPath>Things/Building/Door/Autodoor_Mover</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <damageData>
        <enabled>false</enabled>
      </damageData>
    </graphicData>
    <uiIconPath>Things/Building/Door/Autodoor_MenuIcon</uiIconPath>
    <costList>
      <Steel>40</Steel>
      <ComponentIndustrial>3</ComponentIndustrial>
    </costList>
    <costStuffCount>25</costStuffCount>
    <comps>
      <li Class="CompProperties_Power">
        <compClass>CompPowerTrader</compClass>
        <basePowerConsumption>50</basePowerConsumption>
      </li>
      <li Class="CompProperties_Breakdownable" />
    </comps>
    <designationHotKey>Misc2</designationHotKey>
    <researchPrerequisites>
      <li>Autodoors</li>
    </researchPrerequisites>
    <constructionSkillPrerequisite>6</constructionSkillPrerequisite>
  </ThingDef>

</Defs>