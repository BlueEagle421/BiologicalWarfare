<?xml version="1.0" encoding="utf-8"?>
<Defs>

  <ThingDef ParentName="BuildingBase">
    <defName>Turret_RocketswarmLauncherTest</defName>
    <label>test</label>
    <description>Placeholder. An emergency-defense launcher that fires a single barrage of rockets covering a large area. The turret does not fire until someone activates it. It is very effective against large groups of weaker combatants, but less effective against small numbers of armored targets. Once fired, it must cool off for hours and be reloaded to fire again.</description>
    <thingClass>BiologicalWarfare.Building_TurretRocketCutoutComplex</thingClass>
    <drawerType>MapMeshAndRealTime</drawerType>
    <graphicData>
      <texPath>Things/Building/Security/TurretHeavy_Base</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>(1.5, 1.5)</drawSize>
      <drawOffset>(0,0,-0.1)</drawOffset>
      <damageData>
        <rect>(0.2,0.2,0.6,0.6)</rect>
      </damageData>
      <shadowData>
        <volume>(1.5,0.35,1.4)</volume>
        <offset>(0,0,-0.05)</offset>
      </shadowData>
    </graphicData>
    <uiIconPath>Things/Building/Security/TurretRocket_MenuIcon</uiIconPath>
    <altitudeLayer>Building</altitudeLayer>
    <stealable>false</stealable>
    <rotatable>false</rotatable>
    <size>(2,2)</size>
    <statBases>
      <MaxHitPoints>200</MaxHitPoints>
      <Flammability>0.7</Flammability>
      <WorkToBuild>10000</WorkToBuild>
      <Mass>8</Mass>
      <Beauty>-20</Beauty>
      <ShootingAccuracyTurret>0.96</ShootingAccuracyTurret>
    </statBases>
    <tickerType>Normal</tickerType>
    <comps>
      <li Class="CompProperties_Explosive">
        <wickTicks>240</wickTicks>
        <explosiveRadius>6.9</explosiveRadius>
        <explosiveDamageType>Bomb</explosiveDamageType>
        <chanceNeverExplodeFromDamage>0.8</chanceNeverExplodeFromDamage>
      </li>
      <li Class="CompProperties_Forbiddable" />
      <li Class="CompProperties_Power">
        <compClass>CompPowerTrader</compClass>
        <basePowerConsumption>150</basePowerConsumption>
      </li>
      <li Class="CompProperties_Flickable" />
      <li Class="CompProperties_Breakdownable" />
      <li Class="CompProperties_Refuelable">
        <fuelLabel>Missiles</fuelLabel>
        <fuelGizmoLabel>Missiles</fuelGizmoLabel>
        <outOfFuelMessage>Missing missiles</outOfFuelMessage>
        <fuelFilter>
          <thingDefs>
            <li>USH_FluPathogen</li>
          </thingDefs>
        </fuelFilter>
        <fuelCapacity>175</fuelCapacity>
        <fuelMultiplier>0.06667</fuelMultiplier>
        <initialFuelPercent>1</initialFuelPercent>
        <autoRefuelPercent>1</autoRefuelPercent>
        <showFuelGizmo>true</showFuelGizmo>
        <minimumFueledThreshold>12</minimumFueledThreshold>
        <factorByDifficulty>false</factorByDifficulty>
        <consumeFuelOnlyWhenUsed>true</consumeFuelOnlyWhenUsed>
        <fuelIconPath>Things/Item/Resource/Chemfuel</fuelIconPath>
      </li>
      <li Class="CompProperties_Interactable">
        <compClass>CompInteractableRocketswarmLauncher</compClass>
        <activeTicks>1</activeTicks>
        <cooldownTicks>7500</cooldownTicks>
        <ticksToActivate>60</ticksToActivate>
        <jobString>activate</jobString>
        <onCooldownString>cooling off</onCooldownString>
        <cooldownFleck>FlashRed</cooldownFleck>
        <cooldownFleckSpawnIntervalTicks>60</cooldownFleckSpawnIntervalTicks>
        <cooldownFleckScale>0.7</cooldownFleckScale>
        <cooldownPreventsRefuel>true</cooldownPreventsRefuel>
        <activateTexPath>UI/Commands/ActivateTurret</activateTexPath>
        <targetingParameters>
          <canTargetBuildings>false</canTargetBuildings>
          <canTargetAnimals>false</canTargetAnimals>
          <canTargetMechs>false</canTargetMechs>
          <onlyTargetControlledPawns>true</onlyTargetControlledPawns>
        </targetingParameters>
      </li>
      <li Class="CompProperties_Stunnable">
        <affectedDamageDefs>
          <li>Stun</li>
          <li>EMP</li>
        </affectedDamageDefs>
      </li>
    </comps>
    <passability>PassThroughOnly</passability>
    <pathCost>50</pathCost>
    <fillPercent>0.4</fillPercent>
    <hasTooltip>true</hasTooltip>
    <costList>
      <Plasteel>20</Plasteel>
      <Steel>200</Steel>
      <ComponentIndustrial>2</ComponentIndustrial>
      <USH_FluPathogen>200</USH_FluPathogen>
    </costList>
    <terrainAffordanceNeeded>Heavy</terrainAffordanceNeeded>
    <designationCategory>Security</designationCategory>
    <constructionSkillPrerequisite>5</constructionSkillPrerequisite>
    <building>
      <combatPower>5</combatPower>
      <ai_combatDangerous>true</ai_combatDangerous>
      <turretGunDef>Gun_RocketswarmLauncherTest</turretGunDef>
      <turretTopDrawSize>2.2</turretTopDrawSize>
      <turretBurstCooldownTime>0.1</turretBurstCooldownTime>
      <playTargetAcquiredSound>false</playTargetAcquiredSound>
      <turretBurstWarmupTime>0</turretBurstWarmupTime>
    </building>
    <placeWorkers>
      <li>PlaceWorker_TurretTop</li>
      <li>PlaceWorker_ShowTurretRadius</li>
    </placeWorkers>
    <designationHotKey>Misc2</designationHotKey>
    <researchPrerequisites>
      <li>RocketswarmLauncher</li>
    </researchPrerequisites>
  </ThingDef>

  <ThingDef ParentName="BaseWeaponTurret">
    <defName>Gun_RocketswarmLauncherTest</defName>
    <label>rocketswarm tube</label>
    <description>Placeholder. A rocketswarm tube of the type usually mounted on a rocketswarm launcher turret.</description>
    <graphicData>
      <texPath>Things/Building/MissileLauncher/TurretMissileEmptyTop</texPath>
      <maskPath>Things/Building/MissileLauncher/TurretMissileEmptyTopm</maskPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>CutoutComplex</shaderType>
      <color>(0.94, 0.78, 0.09)</color>
    </graphicData>
    <building>
      <turretTopLoadedGraphic>
        <texPath>Things/Building/MissileLauncher/TurretMissileFullTop</texPath>
        <maskPath>Things/Building/MissileLauncher/TurretMissileFullTopm</maskPath>
        <graphicClass>Graphic_Single</graphicClass>
        <shaderType>CutoutComplex</shaderType>
        <color>(0.94, 0.78, 0.09)</color>
      </turretTopLoadedGraphic>
    </building>
    <statBases>
      <AccuracyTouch>0.28</AccuracyTouch>
      <AccuracyShort>0.72</AccuracyShort>
      <AccuracyMedium>0.66</AccuracyMedium>
      <AccuracyLong>0.5</AccuracyLong>
      <RangedWeapon_Cooldown>3.5</RangedWeapon_Cooldown>
      <DeteriorationRate>0</DeteriorationRate>
      <Mass>40</Mass>
      <Flammability>0</Flammability>
    </statBases>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <defaultProjectile>Proj_RocketTest</defaultProjectile>
        <range>80.9</range>
        <consumeFuelPerShot>25</consumeFuelPerShot>
        <ticksBetweenBurstShots>12</ticksBetweenBurstShots>
        <burstShotCount>7</burstShotCount>
        <forcedMissRadius>9</forcedMissRadius>
        <forcedMissEvenDispersal>true</forcedMissEvenDispersal>
        <requireLineOfSight>false</requireLineOfSight>
        <minRange>29.9</minRange>
        <targetParams>
          <canTargetPawns>false</canTargetPawns>
          <canTargetLocations>true</canTargetLocations>
          <canTargetBuildings>false</canTargetBuildings>
        </targetParams>
        <soundCast>USH_MissileLauncherFired</soundCast>
        <soundCastTail>GunTail_Heavy</soundCastTail>
        <muzzleFlashScale>14</muzzleFlashScale>
      </li>
    </verbs>
  </ThingDef>

  <ThingDef>
    <defName>Proj_RocketTest</defName>
    <label>rocket</label>
    <thingClass>BiologicalWarfare.Projectile_ExplosiveSmoke</thingClass>
    <category>Projectile</category>
    <tickerType>Normal</tickerType>
    <altitudeLayer>Projectile</altitudeLayer>
    <useHitPoints>False</useHitPoints>
    <neverMultiSelect>True</neverMultiSelect>
    <graphicData>
      <texPath>Things/Projectile/Missile</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>1.15</drawSize>
    </graphicData>
    <projectile>
      <explosionRadius>3.5</explosionRadius>
      <speed>28</speed>
      <arcHeightFactor>65</arcHeightFactor>
      <flyOverhead>true</flyOverhead>
      <postExplosionSpawnChance>1</postExplosionSpawnChance>
      <postExplosionSpawnThingCount>1</postExplosionSpawnThingCount>
      <damageDef>USH_FluDamage</damageDef>
      <postExplosionSpawnThingDef>USH_FluGas</postExplosionSpawnThingDef>
      <soundHitThickRoof>Artillery_HitThickRoof</soundHitThickRoof>
      <soundExplode>USH_ExplosionBiologicalGas</soundExplode>
      <soundAmbient>MortarRound_Ambient</soundAmbient>
    </projectile>
  </ThingDef>

</Defs>