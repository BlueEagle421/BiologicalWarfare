<?xml version="1.0" encoding="utf-8"?>
<Defs>

  <!-- unlike virus reproduction hediff, the parasite hediff is unique to every disease def-->
  <HediffDef Name="USH_ParasiteReproductionBase" Abstract="True">
    <hediffClass>BiologicalWarfare.HediffParasiteReproduction</hediffClass>
    <defName>USH_ParasiteReproduction</defName>
    <label>rapid parasite reproduction</label>
    <labelNoun>a rapid parasite reproduction</labelNoun>
    <description>An enhanced parasitic infection tweaked to reproduce pathogens at much faster rate. An overload of parasites will lead to internal body damage.</description>
    <initialSeverity>1</initialSeverity>
    <defaultLabelColor>(0.9, 1.0, 0.35)</defaultLabelColor>
    <comps>
      <li Class="HediffCompProperties">
        <compClass>HediffComp_DisappearsOnDeath</compClass>
      </li>
      <li Class="HediffCompProperties_Disappears">
        <disappearsAfterTicks>600000~650000</disappearsAfterTicks>
        <showRemainingTime>true</showRemainingTime>
      </li>
    </comps>
  </HediffDef>

</Defs>